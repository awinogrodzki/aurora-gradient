{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "es2019",
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "isolatedModules": false,
    "jsx": "react-jsx",
    "outDir": "./lib",
    "rootDir": "./src"
  },
  "include": [
    "./src/**/*.ts"
  ]
}